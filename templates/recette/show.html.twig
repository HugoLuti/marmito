{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Recette</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ recette.nom }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ recette.slug }}</td>
            </tr>
            <tr>
                <th>Temps</th>
                <td>{{ recette.temps }}</td>
            </tr>
            <tr>
                <th>NbPersonne</th>
                <td>{{ recette.nbPersonne }}</td>
            </tr>
            <tr>
                <th>Difficulté</th>
                <td>{{ recette.difficulté }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recette.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ recette.prix }}</td>
            </tr>
            <tr>
                <th>Favorie</th>
                <td>{{ recette.favorie ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ recette.dateCreation ? recette.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateMiseaJour</th>
                <td>{{ recette.dateMiseaJour ? recette.dateMiseaJour|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recette_index') }}">back to list</a>

    <a href="{{ path('app_recette_edit', {'id': recette.id}) }}">edit</a>

    {{ include('recette/_delete_form.html.twig') }}
{% endblock %}
